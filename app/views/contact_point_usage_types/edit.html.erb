<h1>Editing Contact Point Usage Type</h1>

<% form_for(@contact_point_usage_type) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :code %><br />
    <%= f.text_field :code %>
  </p>
  <p>
    <%= f.label :display %><br />
    <%= f.text_field :display %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_field :description %>
  </p>
  <p>
    <%= f.label :available %><br />
    <%= f.check_box :available %>
  </p>
    <p>
    <% fields_for (@contact_point_usage_type.data_status) do |field| %>
      <%= field.label "Data status" %><br />
      <%= field.text_field :description, :disabled => "disabled" %>
      <% if @contact_point_usage_type.data_status_code == -1 then %>
        <%=h "Note: Updating this entry will restore it for use" %>
      <% end %>

    <% end %>
  </p>

  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>
<br/>
<div id="lower-menu">
  <p><%= link_to 'Show', @contact_point_usage_type %> &middot;
<%= link_to 'Back', contact_point_usage_types_path %></p>
</div>
